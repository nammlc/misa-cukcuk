
@model MyWebApp.Models.NhanVien


<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/StaffListDisplay.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/assets/font/fontawesome-free-6.5.2-web/css/all.min.css">
    <title>Chỉnh sửa thông tin nhân viên</title>
    
        
</head>

<body style="font-family: Arial, sans-serif">
    <header class="header d-flex justify-content-between align-items-center">
        <div class="logo-container">
            <a href="http://localhost:5135"><img src="~/css/assets/cukcuk-logo.png" alt="Logo" class="logo"></a>
            
            <div class="list-branch">
                <div class="dropdown">
                <a class="btn btn-outline-secondary dropdown-toggle branch-btn" href="#" role="button"
                    id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Chọn chi nhánh
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="#">Chi nhánh TP Hồ Chí Minh</a></li>
                    <li><a class="dropdown-item" href="#">Chi nhánh Hà Nội</a></li>
                </ul>
            </div>
            </div>
            
        </div>
        <div class="avatar-container">
            <img src="~/css/assets/icon/avatar-default.png" alt="Avatar" class="avatar">
            <div class="avatar-name">Lê Công Nam</div>
            <div class="avatar-option">
                <img src="~/css/assets/icon/option.png" alt="Options">
            </div>
        </div>
    </header>
    <div class="d-flex">
        <nav class="sidebar">
            <ul>
                <li>
                    <img src="~/css/assets/icon/dashboard.png" alt="Dashboard">
                    <a href="http://localhost:5135">Trang chủ</a>
                </li>
                <li>
                    <img src="~/css/assets/icon/report.png" alt="Report">
                    <a href="#">Báo cáo</a>
                </li>
                <li>
                    <img src="~/css/assets/icon/dic-employee.png" alt="Employee">
                    <a href="#">Nhân viên</a>
                </li>
                <li>
                    <img src="~/css/assets/icon/setting.png" alt="Settings">
                    <a href="#">Cài đặt</a>
                </li>
            </ul>
            <div class="end-sidebar" id="toggleSidebar">
                <i class="fa-solid fa-chevron-left"></i> Thu gọn
            </div>
        </nav>
        <main class="main-content">
            <div class="main-content_header" >
                <h1 class="h4">Chỉnh sưa thông tin nhân viên</h1>
                <button>
                    <a href="javascript:void(0)" style="text-decoration: none; color: #fff;">
                        <img src="~/css/assets/icon/add.png" alt="Add" class="me-2">
                        Thêm mới
                    </a>
                </button>
            </div>
            <div class="search-container" style="padding-bottom: 10px;">
                <div class="search-container_left">
                    <form method="get" action="@Url.Action("Index")">
                        <input type="text" id="searchInput" name="searchQuery" value="@ViewBag.SearchQuery" placeholder="Tìm kiếm theo mã, họ tên..." class="form-control">
                        
                        
                    </form>
                </div>
                <div class="search-container_right">
                    <div class="excel">
                        <img src="~/css/assets/icon/export-excel-50.png" alt="Export to Excel">
                    </div>
                    <div class="reload">
                        <img src="~/css/assets/icon/refresh.png" alt="Refresh">
                    </div>
                </div>
            </div>



            <form id="_EditEmployeeModal" asp-controller="NhanVien" asp-action="Edit" method="post" style="border-top: 0.5px solid gray;">
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label for="ma_nhan_vien" class="form-label">Mã nhân viên:</label>
                            <input type="text" class="form-control" id="ma_nhan_vien" name="ma_nhan_vien"
                                value="@Model.ma_nhan_vien" required readonly/>
                        </div>
                        <div class="col-md-3">
                            <label for="ten_nhan_vien" class="form-label">Họ và tên:</label>
                            <input type="text" class="form-control" id="ten_nhan_vien" name="ten_nhan_vien"
                                value="@Model.ten_nhan_vien" required>
                        </div>
                        <div class="col-md-3">
                            <label for="ngay_sinh" class="form-label">Ngày sinh:</label>
                            <input type="date" class="form-control" id="ngay_sinh" name="ngay_sinh"
                                value="@Model.ngay_sinh.ToString("MM-dd-yyyy")" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label d-block">Giới tính:</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gioi_tinh" id="gioiTinhNam"
                                    value="Nam" @(Model.gioi_tinh=="Nam" ? "checked" : "" ) required>
                                <label class="form-check-label" for="gioiTinhNam">Nam</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gioi_tinh" id="gioiTinhNu" value="Nữ"
                                    @(Model.gioi_tinh=="Nữ" ? "checked" : "" )>
                                <label class="form-check-label" for="gioiTinhNu">Nữ</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gioi_tinh" id="gioiTinhKhac"
                                    value="Khác" @(Model.gioi_tinh=="Khác" ? "checked" : "" )>
                                <label class="form-check-label" for="gioiTinhKhac">Khác</label>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="vi_tri" class="form-label">Vị trí:</label>
                            <input type="text" class="form-control" id="vi_tri" name="vi_tri" value="@Model.vi_tri"
                                required>
                        </div>
                        <div class="col-md-4">
                            <label for="so_cmnd" class="form-label">Số CMND:</label>
                            <input type="text" class="form-control" id="so_cmnd" name="so_cmnd" value="@Model.so_cmnd"
                                required>
                        </div>
                        <div class="col-md-4">
                            <label for="ngay_cap_cmnd" class="form-label">Ngày cấp CMND:</label>
                            <input type="date" class="form-control" id="ngay_cap_cmnd" name="ngay_cap_cmnd"
                                value="@Model.ngay_cap_cmnd.ToString("MM-dd-yyyy")" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="noi_cap_cmnd" class="form-label">Nơi cấp CMND:</label>
                            <input type="text" class="form-control" id="noi_cap_cmnd" name="noi_cap_cmnd"
                                value="@Model.noi_cap_cmnd" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="dia_chi" class="form-label">Địa chỉ:</label>
                            <input type="text" class="form-control" id="dia_chi" name="dia_chi" value="@Model.dia_chi"
                                required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="so_dien_thoai" class="form-label">Điện thoại di động:</label>
                            <input type="tel" class="form-control" id="so_dien_thoai" name="so_dien_thoai"
                                value="@Model.so_dien_thoai" required>
                        </div>
                        <div class="col-md-4">
                            <label for="so_dien_thoai_co_dinh" class="form-label">Điện thoại cố định:</label>
                            <input type="tel" class="form-control" id="so_dien_thoai_co_dinh"
                                name="so_dien_thoai_co_dinh" value="@Model.so_dien_thoai_co_dinh">
                        </div>
                        <div class="col-md-4">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" value="@Model.email"
                                required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="so_tai_khoan_ngan_hang" class="form-label">Tài khoản ngân hàng:</label>
                            <input type="text" class="form-control" id="so_tai_khoan_ngan_hang"
                                name="so_tai_khoan_ngan_hang" value="@Model.so_tai_khoan_ngan_hang" required>
                        </div>
                        <div class="col-md-4">
                            <label for="ten_ngan_hang" class="form-label">Tên ngân hàng:</label>
                            <input type="text" class="form-control" id="ten_ngan_hang" name="ten_ngan_hang"
                                value="@Model.ten_ngan_hang" required>
                        </div>
                        <div class="col-md-4">
                            <label for="chi_nhanh_ngan_hang" class="form-label">Chi nhánh ngân hàng:</label>
                            <input type="text" class="form-control" id="chi_nhanh_ngan_hang" name="chi_nhanh_ngan_hang"
                                value="@Model.chi_nhanh_ngan_hang" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" style="background-color: green;">Lưu</button>
                </div>
            </form>


        </main>
    </div>
    <footer class="footer">
        <!-- Footer content here -->
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector(".main-content_header button").addEventListener("click", function () {
                var myModal = new bootstrap.Modal(document.getElementById('addNewStaffModal'), {
                    keyboard: false
                });
                myModal.show();
            });
        });
    </script>
    <script src="~/js/pagination.js"></script>
    <script src="~/js/shrink.js"></script>
</body>

</html>